import React, { useState } from 'react';
import { X, Minimize2, Maximize2, Minus } from 'lucide-react';

interface ModalProps {
  isOpen: boolean;
  onClose: () => void;
  title: string;
  children: React.ReactNode;
  width?: string;
  height?: string;
}

type ModalState = 'normal' | 'minimized' | 'maximized' | 'closed';

const Modal: React.FC<ModalProps> = ({
  isOpen,
  onClose,
  title,
  children,
  width = 'w-[600px]',
  height = 'h-[400px]'
}) => {
  const [state, setState] = useState<ModalState>('normal');

  if (!isOpen && state !== 'minimized') return null;

  const handleClose = () => {
    setState('closed');
    onClose();
  };

  const handleMinimize = () => {
    setState('minimized');
  };

  const handleMaximize = () => {
    setState(state === 'maximized' ? 'normal' : 'maximized');
  };

  const handleRestore = () => {
    setState('normal');
  };

  // Minimized chip
  if (state === 'minimized') {
    return (
      <div
        className="fixed bottom-4 right-4 bg-blue-600 text-white px-4 py-3 rounded-lg shadow-lg cursor-pointer hover:bg-blue-700 transition-all duration-300 transform hover:scale-105 z-50 flex items-center gap-2"
        onClick={handleRestore}
      >
        <Minus className="w-4 h-4" />
        <span className="font-medium">{title}</span>
      </div>
    );
  }

  const modalSizeClasses = state === 'maximized' 
    ? 'w-screen h-screen' 
    : `${width} ${height}`;

  const modalPositionClasses = state === 'maximized'
    ? 'inset-0'
    : 'top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2';

  return (
    <>
      {/* Backdrop */}
      <div
        className="fixed inset-0 bg-black bg-opacity-50 transition-opacity duration-300 z-40"
        onClick={handleClose}
      />

      {/* Modal */}
      <div
        className={`fixed ${modalPositionClasses} ${modalSizeClasses} bg-white rounded-lg shadow-2xl flex flex-col transition-all duration-300 z-50 ${
          state === 'maximized' ? 'rounded-none' : ''
        }`}
        role="dialog"
        aria-modal="true"
        aria-labelledby="modal-title"
      >
        {/* Header */}
        <div className="flex items-center justify-between px-6 py-4 border-b border-gray-200">
          <h2 id="modal-title" className="text-xl font-semibold text-gray-800">
            {title}
          </h2>
          
          <div className="flex items-center gap-2">
            {/* Minimize Button */}
            <button
              onClick={handleMinimize}
              className="p-2 hover:bg-gray-100 rounded-md transition-colors duration-200"
              aria-label="Minimize modal"
            >
              <Minimize2 className="w-4 h-4 text-gray-600" />
            </button>

            {/* Maximize Button */}
            <button
              onClick={handleMaximize}
              className="p-2 hover:bg-gray-100 rounded-md transition-colors duration-200"
              aria-label={state === 'maximized' ? 'Restore modal' : 'Maximize modal'}
            >
              <Maximize2 className="w-4 h-4 text-gray-600" />
            </button>

            {/* Close Button */}
            <button
              onClick={handleClose}
              className="p-2 hover:bg-red-100 rounded-md transition-colors duration-200"
              aria-label="Close modal"
            >
              <X className="w-4 h-4 text-red-600" />
            </button>
          </div>
        </div>

        {/* Content */}
        <div className="flex-1 overflow-auto p-6">
          {children}
        </div>

        {/* Footer (optional) */}
        <div className="px-6 py-4 border-t border-gray-200 flex justify-end gap-3">
          <button
            onClick={handleClose}
            className="px-4 py-2 bg-gray-200 text-gray-800 rounded-md hover:bg-gray-300 transition-colors duration-200"
          >
            Cancel
          </button>
          <button
            className="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors duration-200"
          >
            Confirm
          </button>
        </div>
      </div>
    </>
  );
};

// Demo App
const App: React.FC = () => {
  const [isModalOpen, setIsModalOpen] = useState(false);

  return (
    <div className="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 p-8">
      <div className="max-w-4xl mx-auto">
        <h1 className="text-4xl font-bold text-gray-800 mb-4">
          Custom Modal Component
        </h1>
        <p className="text-gray-600 mb-8">
          Click the button below to open a modal with minimize, maximize, and close controls.
        </p>

        <button
          onClick={() => setIsModalOpen(true)}
          className="px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors duration-200 shadow-lg font-medium"
        >
          Open Modal
        </button>

        <Modal
          isOpen={isModalOpen}
          onClose={() => setIsModalOpen(false)}
          title="Custom Modal Demo"
          width="w-[700px]"
          height="h-[500px]"
        >
          <div className="space-y-4">
            <h3 className="text-2xl font-semibold text-gray-800">
              Welcome to the Modal!
            </h3>
            <p className="text-gray-600">
              This is a fully functional custom modal component with the following features:
            </p>
            <ul className="list-disc list-inside space-y-2 text-gray-600">
              <li>Configurable width and height via props</li>
              <li>Close button to dismiss the modal</li>
              <li>Minimize button that shows a chip at the bottom-right</li>
              <li>Maximize button to expand to full screen</li>
              <li>Smooth animations for all state transitions</li>
              <li>Responsive design with Tailwind CSS</li>
              <li>Accessible with proper ARIA attributes</li>
            </ul>
            <div className="mt-6 p-4 bg-blue-50 rounded-lg">
              <p className="text-sm text-blue-800">
                <strong>Try it out:</strong> Click the minimize button to see the chip, 
                maximize to go full screen, or close to dismiss!
              </p>
            </div>
          </div>
        </Modal>
      </div>
    </div>
  );
};

export default App;